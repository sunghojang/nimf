<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.nimf.engines.nimf-libhangul"
          path="/org/nimf/engines/nimf-libhangul/" gettext-domain="nimf">
    <key type="s" name="hidden-schema-name">
      <default l10n="messages">'Korean (libhangul)'</default>
      <summary>schema name for nimf-settings</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="b" name="active">
      <default>true</default>
      <summary>Active engine</summary>
      <description>The engine will be loaded on startup if available. Restart required</description>
    </key>
    <key type="s" name="layout">
      <choices>
        <choice value='2'   /> <!-- Dubeolsik -->
        <choice value='2y'  /> <!-- Dubeolsik Yetgeul -->
        <choice value='ahn' /> <!-- Ahnmatae -->
        <choice value='3f'  /> <!-- Sebeolsik Final -->
        <choice value='39'  /> <!-- Sebeolsik 390 -->
        <choice value='3s'  /> <!-- Sebeolsik Noshift -->
        <choice value='3y'  /> <!-- Sebeolsik Yetgeul -->
        <choice value='32'  /> <!-- Sebeolsik Dubeol Layout -->
        <choice value='ro'  /> <!-- Romaja -->
      </choices>
      <default>'2'</default>
      <summary>Korean keyboard layout</summary>
      <description>Korean keyboard layout</description>
    </key>
    <key type="s" name="hidden-layout-2">
      <default l10n="messages">'Dubeolsik'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-layout-2y">
      <default l10n="messages">'Dubeolsik Yetgeul'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-layout-ahn">
      <default l10n="messages">'Ahnmatae'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-layout-3f">
      <default l10n="messages">'Sebeolsik Final'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-layout-39">
      <default l10n="messages">'Sebeolsik 390'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-layout-3s">
      <default l10n="messages">'Sebeolsik Noshift'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-layout-3y">
      <default l10n="messages">'Sebeolsik Yetgeul'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-layout-32">
      <default l10n="messages">'Sebeolsik Dubeol Layout'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-layout-ro">
      <default l10n="messages">'Romaja'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="as" name="trigger-keys">
      <default>['Hangul']</default>
      <summary>Trigger keys for switching Korean / System</summary>
      <description>Binding to change Korean / System</description>
    </key>
    <key type="as" name="hanja-keys">
      <default>['Hangul_Hanja']</default>
      <summary>Hotkey for Hanja</summary>
      <description>Binding to Hanja key</description>
    </key>
    <key type="b" name="double-consonant-rule">
      <default>false</default>
      <summary>Use a rule composing double consonants</summary>
      <description>compose a double consonant on pressing same consonant twice</description>
    </key>
    <key type="b" name="auto-correction">
      <default>false</default>
      <summary>auto-correction in Dubeolsik</summary>
      <description>auto-correction in Dubeolsik</description>
    </key>
    <key type="b" name="ignore-reset-in-commit-cb">
      <default>true</default>
      <summary>Ignore reset() in commit callback</summary>
      <description>Ignore reset() called by commit callback in application</description>
    </key>
  </schema>
</schemalist>
